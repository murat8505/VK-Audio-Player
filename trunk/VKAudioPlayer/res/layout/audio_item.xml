<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:layout_width="match_parent"              android:layout_height="wrap_content"              android:layout_margin="5dip"              android:gravity="center|top"              android:orientation="horizontal">    <LinearLayout            android:layout_width="0dip"            android:layout_height="wrap_content"            android:layout_weight="3"            android:orientation="vertical">        <TextView                android:id="@+id/song"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:maxLines="1"                android:layout_marginLeft="5dip"                android:textAppearance="?android:attr/textAppearanceLarge"/>        <TextView                android:id="@+id/artist"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:maxLines="1"                android:layout_marginLeft="11dip"/>    </LinearLayout>    <TextView            android:id="@+id/duration"            android:layout_width="0dip"            android:layout_height="match_parent"            android:layout_marginRight="5dip"            android:layout_marginTop="4dip"            android:layout_weight="1"            android:gravity="center|top|right"            android:textAppearance="?android:attr/textAppearanceMedium"/></LinearLayout>